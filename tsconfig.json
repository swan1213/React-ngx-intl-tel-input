{
    "compilerOptions": {
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "jsx": "react",
        "lib": ["dom", "es2015"],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@phuocng/*": ["packages/*/src"],
            "*": ["node_modules", "packages"]
        }
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/npm/**/*"
    ]
}

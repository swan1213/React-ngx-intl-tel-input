{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "removeComments": true,
        "resolveJsonModule": true,
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "@react-pdf-viewer/*": ["packages/*/src"],
            "*": ["node_modules", "packages"]
        }
    },
    "exclude": ["node_modules"]
}

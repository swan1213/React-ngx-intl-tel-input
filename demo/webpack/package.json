{
    "name": "@react-pdf-viewer/webpack-typescript-demo",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "copy": "cp -rf ../../samples/* dist",
        "typecheck": "tsc --noEmit",
        "build": "rm -rf dist && webpack --mode production && npm run copy",
        "dev": "rm -rf dist && mkdir dist && npm run copy && NODE_ENV=development webpack serve"
    },
    "dependencies": {
        "@react-pdf-viewer/core": "3.1.0",
        "@react-pdf-viewer/default-layout": "3.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.16.5",
        "@babel/preset-env": "^7.16.5",
        "@babel/preset-react": "^7.16.5",
        "babel-loader": "^8.2.3",
        "css-loader": "^6.5.1",
        "html-webpack-plugin": "^5.5.0",
        "mini-css-extract-plugin": "^2.4.5",
        "sass-loader": "^12.4.0",
        "style-loader": "^3.3.1",
        "ts-loader": "^9.2.6",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.6.0"
    }
}

        "@rollup/plugin-typescript": "^3.0.0",
        "@types/react": "^16.9.19",
        "@types/react-dom": "^16.9.5",
        "rollup": "^1.30.1",
        "rollup-plugin-css-only": "^2.0.0",
        "rollup-plugin-terser": "^5.2.0",
        "tslint": "^6.0.0",
        "tslint-react": "^4.2.0",

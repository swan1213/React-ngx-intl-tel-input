		"react": "^16.8.0 || ^17.0.2",
		"react-dom": "^16.8.0 || ^17.0.2",
		"rollup": "^2.52.1",
		"rollup-plugin-terser": "^7.0.2",
		"ts-jest": "^27.0.3",
		"typescript": "^4.3.4"
	},

        "lint": "tslint -c tslint.json -o tslint.log -t prose 'src/**/*.{ts,tsx}'",
        "typecheck": "tsc --noEmit --watch"
    },
    "dependencies": {
        "pdfjs-dist": "^2.2.228",
        "react": "^16.12.0",
        "react-dom": "^16.12.0"

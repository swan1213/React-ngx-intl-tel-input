		"rollup": "^2.35.1",
		"rollup-plugin-less": "^1.1.2",
		"rollup-plugin-less-modules": "^0.1.11",
		"rollup-plugin-terser": "^7.0.2",
		"ts-jest": "^26.4.4",
		"typescript": "^4.1.3"
